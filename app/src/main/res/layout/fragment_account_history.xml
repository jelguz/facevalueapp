<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountHistoryFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp" >

            <LinearLayout android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="10dp" >

            <TextView
                android:id="@+id/tvSavingsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SAVINGS ACCOUNT" />

            <TextView
                android:id="@+id/tvAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0987654321" />

            <TextView
                android:id="@+id/tvBalanceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PHP 987,654.32" />

            <TextView
                android:id="@+id/tvAvailableBalanceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Available Balance" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tvTransactionHistoryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction History" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dec 07" />

                <TextView
                    android:id="@+id/tvTransactionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Withdraw" />

                <TextView
                    android:id="@+id/tvTransactionAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHP -12,345.69" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tvTransactionDate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dec 07" />

                <TextView
                    android:id="@+id/tvTransactionText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposit" />

                <TextView
                    android:id="@+id/tvTransactionAmount2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHP 1,000,000.00" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>